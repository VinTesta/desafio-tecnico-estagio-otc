generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quote {
  id              String   @id @default(cuid())
  payTokenId      Int
  payToken        Currency @relation("PayTokenRelation", fields: [payTokenId], references: [id])
  payTo           String
  payAmount       String
  receiveTokenId  Int
  receiveToken    Currency @relation("ReceiveTokenRelation", fields: [receiveTokenId], references: [id])
  receiveAmount   String
  paymentCalldata String
  createdAt       DateTime @default(now())
}

model Currency {
  id            Int  @id @default(autoincrement())
  symbol        String @unique
  chainId       Int
  tokenAddress  String @unique
  quotesPay     Quote[] @relation("PayTokenRelation")
  quotesReceive Quote[] @relation("ReceiveTokenRelation")
}
